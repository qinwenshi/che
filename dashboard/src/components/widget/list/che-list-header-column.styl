.che-list-header-column
  display inherit
  line-height inherit
  margin 0 !important
  text-transform uppercase
  color $list-header-blue-color

  .header-sort-direction
    padding 0 4px 0 4px
    text-align center
    vertical-align middle

    *::before
      position relative
      font-size 12px
      color $menu-bg-color

    .fa-sort-desc::before
      top 1px

    .fa-sort-asc::before
      top 3px
